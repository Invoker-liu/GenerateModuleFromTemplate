<idea-plugin>
    <id>com.dengzii.plugin.template</id>
    <name>Template Module Generator</name>
    <version>1.0</version>
    <vendor email="dengzii@foxmail.com" url="https://github.com/dengzii">denzi</vendor>

    <description><![CDATA[
       <b>Create a diverse directory structure from a highly customizable template</b><br>
       <br>
       The AndroidStudio only a limited number of module categories can be created<br>
       Using this plugin, help you create directories and files from customizable template<br>
       <br>
    ]]></description>

    <change-notes><![CDATA[
  1.0: basically feature, generate module directories from template
  ]]>
    </change-notes>

    <idea-version since-build="182.711"/>

    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService  serviceImplementation="com.dengzii.plugin.template.ModuleTemplateConfigProvider"/>
        <applicationService  serviceImplementation="com.dengzii.plugin.template.ConfigProvider"/>
        <fileTemplateGroup implementation="com.dengzii.plugin.template.template.FileTemplateFactory" order="first"/>
        <internalFileTemplate name="AndroidManifest" id="com.dengzii.plugin.template.ft.manifest"/>
        <applicationConfigurable groupId="tools" displayName="Template Module Generator"
                             id="preferences.ModuleTemplateConfig"
                             instance="com.dengzii.plugin.template.ui.ConfigurePanel"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.dengzii.plugin.template.gen" class="com.dengzii.plugin.template.CreateModuleAction"
                text="Create Module From Template"
                description="Create module from template">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>